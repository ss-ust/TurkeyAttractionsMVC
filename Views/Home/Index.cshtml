@model IEnumerable<TurkeyAttractionsMVC.Models.City>

@{
    ViewData["Title"] = "Home Page";
}
<!-- slider Area Start-->
<div class="slider-area ">
    <div class="slider-active">
        <div class="single-slider hero-overly slider-height d-flex align-items-center"
             style="background-image: url('@Url.Content("~/assets/img/hero/h1_hero.jpg")');">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 col-lg-9 col-md-9">
                        <div class="hero__caption">
                            <h1>Find your <span>Next tour!</span></h1>
                            <form action="@Url.Action("Details", "Cities")" method="GET" class="search-box d-flex align-items-center">
                                <select name="id" class="form-control dropdown-menu-style mr-3" style="width: 75%;" required>
                                    @foreach (var city in Model)
                                    {
                                        <option value="@city.ID">@city.Name</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary search-form">Search</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
