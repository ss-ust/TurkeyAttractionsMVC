@model TurkeyAttractionsMVC.Models.City

@{
    ViewData["Title"] = "Edit City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Edit City</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID" />

        <div class="form-group mb-3">
            <label for="Name">Name</label>
            <input asp-for="Name" id="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Lat">Latitude</label>
            <input asp-for="Lat" id="Lat" class="form-control" />
            <span asp-validation-for="Lat" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Lng">Longitude</label>
            <input asp-for="Lng" id="Lng" class="form-control" />
            <span asp-validation-for="Lng" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="ImageUrl">Image URL</label>
            <input asp-for="ImageUrl" id="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
