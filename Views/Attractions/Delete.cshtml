@model TurkeyAttractionsMVC.Models.Attraction

@{
    ViewData["Title"] = "Delete Attraction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Delete Attraction</h1>
    <h3>Are you sure you want to delete this attraction?</h3>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City.Name</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-route-id="@Model.CityID" class="btn btn-secondary">Cancel</a>
    </form>
</div>
